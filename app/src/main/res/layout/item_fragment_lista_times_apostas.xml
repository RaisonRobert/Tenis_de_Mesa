<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewFilaTimes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTime1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="TIME 1"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonTime2"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageButtonTime2"
            app:layout_constraintTop_toTopOf="@+id/imageButtonTime2" />

        <ImageButton
            android:id="@+id/imageButtonTime1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButtonTime2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonTime1"
            app:layout_constraintStart_toEndOf="@+id/imageButtonTime1"
            app:layout_constraintTop_toTopOf="@+id/imageButtonTime1"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="VS"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTime1"
            app:layout_constraintEnd_toStartOf="@+id/textViewTime2"
            app:layout_constraintTop_toTopOf="@+id/textViewTime1" />

        <TextView
            android:id="@+id/textViewTime2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="TIME 2"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/btnApostar"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageViewCalendario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:foreground="@drawable/ic_baseline_calendar_month_24"
            app:layout_constraintBottom_toTopOf="@+id/textViewHora"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonTime1" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="31 de MarÃ§o"
            app:layout_constraintStart_toEndOf="@+id/imageViewCalendario"
            app:layout_constraintTop_toTopOf="@+id/imageViewCalendario" />

        <TextView
            android:id="@+id/textViewAno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2022"
            app:layout_constraintStart_toStartOf="@+id/textViewData"
            app:layout_constraintTop_toBottomOf="@+id/textViewData" />

        <ImageView
            android:id="@+id/imageViewCampeonado"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:foreground="@drawable/ic_baseline_wine_bar_24"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCalendario"
            app:layout_constraintStart_toEndOf="@+id/textViewData"
            app:layout_constraintTop_toTopOf="@+id/imageViewCalendario" />

        <TextView
            android:id="@+id/textViewCampeonado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Tennis Champions"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewCampeonado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewCampeonado"
            app:layout_constraintTop_toTopOf="@+id/imageViewCampeonado" />

        <Button
            android:id="@+id/btnApostar"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:layout_marginEnd="5dp"
            android:text="Apostar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="50%"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageViewCampeonado"
            app:layout_constraintEnd_toEndOf="@+id/textViewTime1"
            app:layout_constraintStart_toStartOf="@+id/textViewTime1"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime1" />

        <TextView
            android:id="@+id/textViewCota2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="50%"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageViewCampeonado"
            app:layout_constraintEnd_toEndOf="@+id/textViewTime2"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textViewTime2"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime2" />

        <TextView
            android:id="@+id/textViewHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="00:00:00"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>