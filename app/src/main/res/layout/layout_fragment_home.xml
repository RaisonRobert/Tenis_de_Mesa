<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textViewProxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Próxima Partida"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProximoJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProxima">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="TIME 1"
                android:textColor="#FF0000"
                app:layout_constraintBottom_toBottomOf="@+id/imageButtonTime2"
                app:layout_constraintStart_toEndOf="@+id/imageButtonTime2"
                app:layout_constraintTop_toTopOf="@+id/imageButtonTime2" />

            <ImageButton
                android:id="@+id/imageButtonTime1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:foreground="@drawable/ic_baseline_circle_red_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButtonTime2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:background="#00FFFFFF"
                android:foreground="@drawable/ic_baseline_circle_green_24"
                app:layout_constraintBottom_toBottomOf="@+id/imageButtonTime1"
                app:layout_constraintStart_toEndOf="@+id/imageButtonTime1"
                app:layout_constraintTop_toTopOf="@+id/imageButtonTime1" />

            <TextView
                android:id="@+id/textViewTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="VS"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTime1"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/textViewTime1"
                app:layout_constraintTop_toTopOf="@+id/textViewTime1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="TIME 2"
                android:textColor="#2FFF00"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTime2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewTime2" />

            <ImageView
                android:id="@+id/imageViewCalendario"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonTime1"
                android:foreground="@drawable/ic_baseline_calendar_month_24" />

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="31 de Março"
                app:layout_constraintStart_toEndOf="@+id/imageViewCalendario"
                app:layout_constraintTop_toTopOf="@+id/imageViewCalendario" />

            <TextView
                android:id="@+id/textViewAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2022"
                app:layout_constraintStart_toStartOf="@+id/textViewData"
                app:layout_constraintTop_toBottomOf="@+id/textViewData" />

            <ImageView
                android:id="@+id/imageViewCampeonado"
                android:layout_width="50dp"
                android:layout_height="50dp"
               android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewData"
                app:layout_constraintTop_toBottomOf="@+id/imageButtonTime2"
                android:foreground="@drawable/ic_baseline_wine_bar_24" />

            <TextView
                android:id="@+id/textViewCampeonado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tennis Champions"

                app:layout_constraintBottom_toBottomOf="@+id/imageViewCampeonado"
                app:layout_constraintStart_toEndOf="@+id/imageViewCampeonado"
                app:layout_constraintTop_toTopOf="@+id/imageViewCampeonado"
                app:layout_constraintVertical_bias="0.612" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <ImageButton
        android:id="@+id/btn_liga"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="@color/purple_700"
        app:layout_constraintEnd_toEndOf="@+id/cardViewProximoJogo"
        app:layout_constraintStart_toStartOf="@+id/cardViewProximoJogo"
        app:layout_constraintTop_toBottomOf="@+id/cardViewProximoJogo" />

    <ImageButton
        android:id="@+id/btn_aposta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:foreground="@color/purple_200"
        app:layout_constraintEnd_toEndOf="@+id/btn_liga"
        app:layout_constraintStart_toStartOf="@+id/btn_liga"
        app:layout_constraintTop_toBottomOf="@+id/btn_liga"
         />

    <TextView
        android:id="@+id/textViewLabelAposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Faça Sua Aposta"
        app:layout_constraintBottom_toBottomOf="@+id/btn_aposta"
        app:layout_constraintEnd_toEndOf="@+id/btn_aposta"
        app:layout_constraintStart_toStartOf="@+id/btn_aposta"
        app:layout_constraintTop_toTopOf="@+id/btn_aposta" />

</androidx.constraintlayout.widget.ConstraintLayout>